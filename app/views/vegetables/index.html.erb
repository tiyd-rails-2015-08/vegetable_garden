<p id="notice"><%= notice %></p>

<h1>Listing Vegetables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="vegetables">
    <% @vegetables.each do |vegetable| %>
      <%= render vegetable %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vegetable', new_vegetable_path, remote: true %>

<div id="new-vegetable-form">
</div>
